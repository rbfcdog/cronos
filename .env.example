# Cronos Testnet Configuration
CRONOS_TESTNET_RPC_URL=https://evm-t3.cronos.org
CRONOS_TESTNET_CHAIN_ID=338
CRONOS_TESTNET_EXPLORER=https://explorer.cronos.org/testnet

# Private Keys (DO NOT COMMIT REAL KEYS)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
EXECUTOR_PRIVATE_KEY=your_executor_private_key_here

# x402 Configuration
X402_FACILITATOR_URL=https://facilitator.x402.dev
X402_API_KEY=your_x402_api_key_here

# AI Agent Configuration
OPENAI_API_KEY=your_openai_api_key_here
# or
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Backend Configuration
BACKEND_PORT=3000
NODE_ENV=development

# Contract Addresses (will be filled after deployment)
EXECUTION_ROUTER_ADDRESS=
TREASURY_VAULT_ADDRESS=
ATTESTATION_REGISTRY_ADDRESS=

# ============================================================================
# x402 Agent Platform - Additional Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Cronos Blockchain Explorer Keys (for AI Agent SDK)
# ----------------------------------------------------------------------------
CRONOS_MAINNET_EXPLORER_KEY=
CRONOS_TESTNET_EXPLORER_KEY=
CRONOS_ZKEVM_MAINNET_EXPLORER_KEY=
CRONOS_ZKEVM_TESTNET_EXPLORER_KEY=

# ----------------------------------------------------------------------------
# Cronos zkEVM Configuration
# ----------------------------------------------------------------------------
CRONOS_ZKEVM_MAINNET_RPC=https://mainnet.zkevm.cronos.org
CRONOS_ZKEVM_TESTNET_RPC=https://testnet.zkevm.cronos.org

# ----------------------------------------------------------------------------
# Platform Configuration
# ----------------------------------------------------------------------------

# Default chain for agent operations (25=mainnet, 338=testnet, 388=zkEVM mainnet, 240=zkEVM testnet)
DEFAULT_CHAIN_ID=338

# Default LLM model for agents
DEFAULT_LLM_MODEL=gpt-4-turbo

# Enable detailed tracing (increases token usage)
ENABLE_TRACING=true

# Maximum gas per transaction (in wei)
MAX_GAS_PER_TRANSACTION=5000000

# ----------------------------------------------------------------------------
# Testing Studio Configuration
# ----------------------------------------------------------------------------

# Number of fuzz testing iterations
FUZZ_ITERATIONS=100

# Gas profiling frequency (seconds)
GAS_PROFILE_INTERVAL=60

# Test scenario timeout (milliseconds)
TEST_TIMEOUT=60000

# ----------------------------------------------------------------------------
# Observability Configuration
# ----------------------------------------------------------------------------

# Transaction indexer polling interval (milliseconds)
INDEXER_POLL_INTERVAL=5000

# Metrics retention period (days)
METRICS_RETENTION_DAYS=30

# Enable real-time event streaming
ENABLE_EVENT_STREAM=true

# ----------------------------------------------------------------------------
# Orchestration Configuration
# ----------------------------------------------------------------------------

# Maximum concurrent agents in a workflow
MAX_CONCURRENT_AGENTS=5

# Workflow execution timeout (milliseconds)
WORKFLOW_TIMEOUT=300000

# State synchronization interval (milliseconds)
STATE_SYNC_INTERVAL=1000

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------

# Frontend port
FRONTEND_PORT=3001

# GraphQL endpoint
GRAPHQL_ENDPOINT=http://localhost:3000/graphql

# WebSocket endpoint for real-time updates
WS_ENDPOINT=ws://localhost:3000/ws

# ----------------------------------------------------------------------------
# Database Configuration (for Observability)
# ----------------------------------------------------------------------------

# SQLite database path (local development)
DATABASE_PATH=./data/platform.db

# Or use PostgreSQL for production
# DATABASE_URL=postgresql://user:password@localhost:5432/x402_platform

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------

# JWT secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Enable CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log output (console, file, both)
LOG_OUTPUT=console

# Log file path (if LOG_OUTPUT includes 'file')
LOG_FILE_PATH=./logs/platform.log
